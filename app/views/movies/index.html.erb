<div class="post">
  <h1 style="color: white;"> Welcome To Movies Hub</h1>
  <% if user_signed_in?%>
    <% if current_user.role == 'admin' %>
      <%= link_to 'Add New Movie',new_movie_path ,class: "btn btn-primary btn-sm" %>
    <% end %> 
  <% end %>
  <div class="movie-grid">
    <% @movies.each do |movie| %>
      <div class="movie-item">
        <%= link_to image_tag(movie.main_image,class: 'movie-image'), movie_path(movie) %>
        <h2  style="color: white"><%= movie.name %></h2>
        <h6 style="color: white"> Category:<%= movie.category.name %></h6>
      </div>
    <% end %>
  </div>
</div>
